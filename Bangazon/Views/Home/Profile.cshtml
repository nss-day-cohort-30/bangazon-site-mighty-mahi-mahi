@model Bangazon.Models.ProfileViewModels.ProfileViewModel

@{
    ViewData["Title"] = "Profile";
}

<h1>Profile</h1>

<div>
    <h4>
        <a asp-controller="Orders" asp-action="OrderHistory">View Order History</a>
    </h4>

    <div>
        <h4>Payment Methods:</h4>
        <a asp-controller="PaymentTypes" asp-action="Create">Add New Payment Method</a>
    </div>
    <hr />
    @foreach (var type in Model.PaymentTypes)
    {
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => type.Description)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => type.Description)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => type.AccountNumber)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => type.AccountNumber)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => type.ExpirationDate)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => type.ExpirationDate)
    </dd>
</dl>
        <div>
            <a asp-controller="PaymentTypes" asp-action="Edit" asp-route-id="@type.PaymentTypeId">Edit</a> | 
            <a asp-controller="PaymentTypes" asp-action="Delete" asp-route-id="@type.PaymentTypeId">Delete</a>
        </div>
        <hr />
    }
    <a asp-controller="Products" asp-action="Index">Back to Home Screen</a>
</div>
